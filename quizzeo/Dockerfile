FROM node:20-alpine

ARG DATABASE_URL
ARG SALT
ARG PASSWORD
ARG NEXT_PUBLIC_API_URL

ENV DATABASE_URL=${DATABASE_URL}
ENV SALT=${SALT}
ENV PASSWORD=${PASSWORD}
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}

RUN mkdir -p /app
WORKDIR /app
COPY . .
RUN npm install
RUN npm run build
RUN npx prisma migrate deploy
EXPOSE 3000
CMD ["npm", "start"]